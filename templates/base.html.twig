<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {# CDN PureCss #}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/pure-min.css" integrity="sha384-X38yfunGUhNzHpBaEBsWLO+A0HDYOQi8ufWDkZ0k9e0eXz/tH3II7uKZ9msv++Ls" crossorigin="anonymous">
            {# grids-responsive.css PureCss #}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/grids-responsive-min.css">
            {# CDN Menu responsive #}
            <link rel="stylesheet" href="/css/pure/grids-responsive-min.css">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}                
            <div class="custom-wrapper pure-g" id="menu">
                <div class="pure-u-1 pure-u-md-1-3">
                    <div class="pure-menu">
                        <a href="#" class="pure-menu-heading custom-brand">LOGO</a>
                        <a href="#" class="custom-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
                    </div>
                </div>
                <div class="pure-u-1 pure-u-md-1-3">
                    <div class="pure-menu pure-menu-horizontal custom-can-transform">
                        <ul class="pure-menu-list">
                            <li class="pure-menu-item">
                                <a href="{{ path('app_praticien_index') }}" class="pure-menu-link">Praticiens</a>
                            </li>
                            <li class="pure-menu-item">
                                <a href="{{ path('app_metier_index') }}" class="pure-menu-link">Métiers</a>
                            </li>
                            <li class="pure-menu-item">
                                <a href="{{ path('app_article_index') }}" class="pure-menu-link">Articles</a>
                            </li>
                            <li class="pure-menu-item">
                                <a href="{{ path('app_tag_index') }}" class="pure-menu-link">Catégories</a>
                            </li>
                            <li class="pure-menu-item">
                                <a href="{{ path('app_editeur_index') }}" class="pure-menu-link">Editeurs</a>
                            </li>
                            <li class="pure-menu-item">
                                <a href="{{ path('app_user_index') }}" class="pure-menu-link">Users</a>
                            </li>
                        </ul>
                        {% if app.user %}
                            <ul class="pure-menu-list">
                                <li class="pure-menu-item">
                                     <a href="{{ path('app_logout') }}" class="pure-menu-link"> {{ app.user.userIdentifier }} - Deconnexion</a>
                                </li>
                            </ul>
                            {% else %}
                            <ul class="pure-menu-list">
                                <li class="pure-menu-item">
                                    <a href="{{ path('app_login') }}" class="pure-menu-link">Connexion</a>
                                </li>
                            </ul>
                            {% endif %} 
                    </div>
                </div>


                {# <div class="pure-u-1 pure-u-md-1-3">
                    <div class="pure-menu pure-menu-horizontal custom-menu-3 custom-can-transform">
                        <ul class="pure-menu-list">
                            <li class="pure-menu-item"><a href="#" class="pure-menu-link">Yahoo</a></li>
                            <li class="pure-menu-item"><a href="#" class="pure-menu-link">W3C</a></li>
                        </ul>
                    </div>
                </div> #}
            </div>
        {% endblock %}
        {% block body %}{% endblock %}


    </body>
</html>
