                    <div class="containerPraticienText">
                        <p>{{ praticiensMetiers.praticien.nom }} {{ praticiensMetiers.praticien.prenom }}</p>
                        <p>{{ praticiensMetiers.metiers|join(', ')}}</p>
                        
