{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <h2 class="titreIndex">Liste des users</h2>

    <div class="btnContainer">
        <a href="{{ path('app_user_new') }}">
            <button>Creer un nouvel admin</button>
        </a>
    </div>

    <table class="table pure-table pure-table-horizontal">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Enabled</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="tdIndex">{{ user.email }}</td>
                <td class="tdIndex">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="tdIndex">{{ user.enabled ? 'Yes' : 'No' }}</td>
                <td class="column btnTdIndex">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}"> 
                        <button class="afficherBtn">
                            <i class="fa-regular fa-eye fa-lg" style="color: #000000;"></i>
                            Afficher
                        </button>
                    </a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">
                        <button>
                            <i class="fa-solid fa-pen-to-square fa-lg" style="color: #000000;"></i>
                            Modifier
                        </button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
