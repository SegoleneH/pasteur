                        <li class="pure-menu-item">
                            <a href="{{ path('app_front') }}" class="pure-menu-link">Accueil</a>
                        </li>
                        <li class="pure-menu-item">
                            <a href="{{ path('app_front') }}#sectionNews" class="pure-menu-link">Actualités</a>
                        </li>
                        <li class="pure-menu-item">
                            <a href="{{ path('app_front') }}#sectionFaq" class="pure-menu-link">FAQ</a>
                        </li>
                        <li class="pure-menu-item">
                            <a href="{{ path('app_front') }}#sectionAcces" class="pure-menu-link">Accès</a>
                        </li>
                        <li class="pure-menu-item">
                            <a href="{{ path('app_front') }}#sectionPraticien" class="pure-menu-link">Prendre RDV</a>
                        </li>
                        <li class="pure-menu-item">
                            <a href="{{ path('app_front_articles') }}" class="pure-menu-link">Articles</a>
                        </li>
                    </ul>
                </div>

            </div>
        {% endblock %}

        {% block body %}
        {% endblock %}

