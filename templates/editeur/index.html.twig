{% extends 'base.html.twig' %}

{% block title %}Éditeurs{% endblock %}

{% block body %}
    <h1>Liste des Éditeurs</h1>
    <div class="btnContainer">
        <a href="{{ path('app_editeur_new') }}">
            <button>Créer Nouvel Éditeur</button>
        </a>
    </div>
    
    <table class="table pure-table pure-table-horizontal">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for editeur in editeurs %}
            <tr>
                <td>{{ editeur.nom }}</td>
                <td>{{ editeur.prenom }}</td>
                <td>{{ editeur.user.email }}</td>
                <td class="column">
                    <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}">
                        <button>
                            <i class="fa-regular fa-eye fa-lg" style="color: #000000;"></i>
                            Afficher
                        </button>
                    </a>
                </td>
                <td class="column">
                    <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}">
                        <button>
                            <i class="fa-solid fa-pen-to-square fa-lg" style="color: #000000;"></i>
                            Modifier
                        </button>   
                    </a>             
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
