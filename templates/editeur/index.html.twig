{% extends 'base.html.twig' %}

{% block title %}Editeurs{% endblock %}

{% block body %}
    <h1>Liste des éditeurs</h1>

    <table class="table pure-table pure-table-horizontal">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for editeur in editeurs %}
            <tr>
                <td>{{ editeur.id }}</td>
                <td>{{ editeur.nom }}</td>
                <td>{{ editeur.prenom }}</td>
                <td>{{ editeur.user.email }}</td>
                <td>
                    <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}">Afficher</a>
                    <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_editeur_new') }}">Créer Nouveau</a>
{% endblock %}
