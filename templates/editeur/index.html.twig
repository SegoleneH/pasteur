{% extends 'base.html.twig' %}

{% block title %}Éditeurs{% endblock %}

{% block body %}
    <h1>Liste des Éditeurs</h1>

    <table class="table pure-table pure-table-horizontal">
    <a href="{{ path('app_editeur_new') }}">Créer Nouvel Éditeur</a>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for editeur in editeurs %}
            <tr>
                <td>{{ editeur.nom }}</td>
                <td>{{ editeur.prenom }}</td>
                <td>{{ editeur.user.email }}</td>
                <td class="column">
                    <i class="fa-regular fa-eye fa-lg" style="color: #000000;"></i>
                    <a href="{{ path('app_editeur_show', {'id': editeur.id}) }}">Afficher</a>
                </td>
                <td class="column">
                    <i class="fa-solid fa-pen-to-square fa-lg" style="color: #000000;"></i>
                    <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
