{% extends 'base.html.twig' %}

{% block title %}Éditeur{% endblock %}

{% block body %}
    <h1>{{ editeur.nom }} {{ editeur.prenom }}</h1>

    <table class="table pure-table pure-table-horizontal">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ editeur.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ editeur.user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_editeur_index') }}">Précédent</a>

    <a href="{{ path('app_editeur_edit', {'id': editeur.id}) }}">Modifier</a>

    {{ include('editeur/_delete_form.html.twig') }}
{% endblock %}
