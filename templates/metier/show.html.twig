{% extends 'base.html.twig' %}

{% block title %}Metier{% endblock %}

{% block body %}
    <div class="topContainer">
        <a href="{{ path('app_metier_index') }}">
            <button class="previousBtn">Précédent</button>
        </a>

        <h2>Metier</h2>
    </div>

    
    <table class="table pure-table pure-table-horizontal">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ metier.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ metier.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btnRow">
        <div class="btnContainer">
            <a href="{{ path('app_metier_edit', {'id': metier.id}) }}">
                <button>Modifier</button>
            </a>
        </div>

        {{ include('metier/_delete_form.html.twig') }}
    </div>
{% endblock %}
