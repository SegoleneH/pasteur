{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1>Détail de {{ tag.nom }}</h1>

    <table class="table pure-table pure-table-horizontal">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tag.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tag.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tag_index') }}">Précédent</a>

    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}">Modifier</a>

    {{ include('tag/_delete_form.html.twig') }}
{% endblock %}
