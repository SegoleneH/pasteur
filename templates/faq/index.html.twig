{% extends 'base.html.twig' %}

{% block title %}Liste FAQ{% endblock %}

{% block body %}
    <h2 class="titreIndex">Liste des FAQ</h2>
   
    <div class="btnContainer">
        <a href="{{ path('app_faq_new') }}">
            <button>Creer une nouvelle FAQ</button>
        </a>
    </div>

    <table class="table pure-table pure-table-horizontal">
        <thead>
            <tr>
                <th>Question</th>
                <th>RU+00E9ponse</th>
                <th colspan="2" ></th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr>
                <td class="tdIndex" >{{ faq.question | u.truncate(60, '...')}}</td>
                <td class="tdIndex" >{{ faq.reponse | u.truncate(30, '...')}}</td>
                {#* Test : mettre tdIndex avec width : 25vw et btnTdIndex avec width : 30vw #}
                {#* but :  découper une colonne de la taille qu'on veut pour les boutons #}
                <td class="column btnTdIndex">
                    <a href="{{ path('app_faq_show', {'id': faq.id}) }}">
                        <button class="afficherBtn">
                            <i class="fa-regular fa-eye fa-lg" style="color: #000000;"></i>
                            Afficher
                        </button>
                    </a>
                    {#* Test : mettre 2 liens dans 1 même <td> pour résoudre pb de bordure coriace  #}
                    <a href="{{ path('app_faq_edit', {'id': faq.id}) }}">
                        <button>
                            <i class="fa-solid fa-pen-to-square fa-lg" style="color: #000000;"></i>
                            Modifier
                        </button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune FAQ existante</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
