{% extends 'base.html.twig' %}

{% block title %}Liste FAQ{% endblock %}

{% block body %}
    <h1>Liste des FAQ</h1>

    <a href="{{ path('app_faq_new') }}">Creer une nouvelle FAQ</a>

    <table class="table pure-table pure-table-horizontal">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Reponse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr>
                <td>{{ faq.id }}</td>
                <td>{{ faq.question }}</td>
                <td>{{ faq.reponse }}</td>
                <td>
                    <a href="{{ path('app_faq_show', {'id': faq.id}) }}">Afficher</a>
                    <a href="{{ path('app_faq_edit', {'id': faq.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune FAQ existante</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
