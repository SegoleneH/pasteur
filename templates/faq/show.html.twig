{% extends 'base.html.twig' %}

{% block title %}Faq {{ faq.id }}{% endblock %}

{% block body %}
    <div class="topContainer">
        <a href="{{ path('app_faq_index') }}">
            <button class="previousBtn">Précédent</button>
        </a>

        <h2>Question {{ faq.id }}</h2>
    </div>


    <table class="table pure-table pure-table-horizontal">
        <tbody>
            <tr>
                <th>Question</th>
                <td>{{ faq.question }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ faq.reponse }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btnRow">
        <div class="btnContainer">
            <a href="{{ path('app_faq_edit', {'id': faq.id}) }}">
                <button>Modifier</button>
            </a>
        </div>
        
        {{ include('faq/_delete_form.html.twig') }}
    </div>

{% endblock %}
