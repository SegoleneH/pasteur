{% extends 'base.html.twig' %}

{% block title %}Mentions index{% endblock %}

{% block body %}
    <h1>Mentions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>MentionsLegale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mention in mentions %}
            <tr>
                <td>{{ mention.mentionsLegale | raw }}</td>
                <td>
                    <a href="{{ path('app_mentions_show', {'id': mention.id}) }}">show</a>
                    <a href="{{ path('app_mentions_edit', {'id': mention.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mentions_new') }}">Create new</a>
{% endblock %}
