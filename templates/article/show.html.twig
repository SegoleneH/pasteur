{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>{{ article.titre }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Message destiné à la page d'accueil</th>
                <td>{{ article.resume }}</td>
            </tr>
            <tr>
                <th>Contenu de l'Article</th>
                <td>{{ article.contenu |raw }}</td>
            </tr>
            <tr>
                <th>Créé le : </th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% if article.imageName %}

    <img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{ article.alt }} "/>

    {% endif %}

    <a href="{{ path('app_article_index') }}">
        <button>Précédent</button>
    </a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">
        <button>Modifier</button>
    </a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
