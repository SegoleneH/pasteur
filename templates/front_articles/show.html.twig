{% extends 'base_front.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="topContainer">
        <div><button class="previousBtn" onclick="window.location.href ='{{ path('app_front_articles') }}'" aria-label="Vers tous les articles">Précédent</button></div>

        <h1>{{ article.titre }}</h1>
    </div>
    

    <section>
        {% if article.imageName %}
            <div class="imgContainer">
                <img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{ article.alt }} "/>
            </div>
        {% endif %}

        <article>
            {{ article.contenu |raw }}
            <div>{{ article.createdAt ? article.createdAt|date('d-m-Y H:i:s') : '' }}</div>
        </article>
    </section>


{% endblock %}
