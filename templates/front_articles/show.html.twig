{% extends 'base_front.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="topContainer">
        <a href="{{ path('app_front_articles') }}">
            <button class="previousBtn">Précédent</button>
        </a>
        <h1>{{ article.titre }}</h1>
    </div>
    

    <section>
        <article>
            {{ article.contenu |raw }}
        </article>
        
        <p>Créé le :{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</p>
    </section>

 

    {% if article.imageName %}

    <img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{ article.alt }} "/>

    {% endif %}


{% endblock %}
